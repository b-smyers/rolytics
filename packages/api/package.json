{
  "name": "api",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "pnpm --filter api build && node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "pnpm --filter api clean && tsc && pnpm --filter api copy-assets",
    "copy-assets": "cp -r src/models dist/models && cp -r src/schemas dist/schemas",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --verbose tests",
    "test:watch": "jest --verbose tests --watchAll"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/axios": "^0.14.4",
    "ajv": "^8.17.1",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.10.0",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "node-cron": "^4.2.1"
  },
  "_moduleAliases": {
    "@controllers": "src/controllers",
    "@middleware": "src/middleware",
    "@models": "src/models",
    "@routes": "src/routes",
    "@services": "src/services",
    "@schemas": "src/schemas"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/body-parser": "^1.19.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^24.0.13",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}