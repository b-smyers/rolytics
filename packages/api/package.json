{
  "name": "api",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "pnpm --filter api build && node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "pnpm --filter api clean && tsc && tsc-alias && pnpm --filter api copy-assets",
    "copy-assets": "cp -r src/models dist/models && cp -r src/schemas dist/schemas",
    "clean": "rm -rf dist",
    "lint": "eslint --config eslint.config.mjs --ext .ts,.js src",
    "test": "jest tests",
    "test:watch": "jest tests --watchAll",
    "test:coverage": "jest test --coverage",
    "prettier": "prettier --write \"src/**/*.{ts,js,json}\""
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "ajv": "^8.18.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "body-parser": "^2.2.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.2",
    "express": "^5.2.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "node-cron": "^4.2.1"
  },
  "_moduleAliases": {
    "@controllers": "src/controllers",
    "@middleware": "src/middleware",
    "@models": "src/models",
    "@routes": "src/routes",
    "@services": "src/services",
    "@schemas": "src/schemas",
    "@lib": "src/lib"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/axios": "^0.14.4",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/body-parser": "^1.19.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^24.5.2",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  }
}